{
    "compilerOptions": {
        "outDir": "./dist/",
        "baseUrl": "./src/",
        "sourceMap": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "moduleResolution":"node",
        "pretty": true,
        "removeComments": true,
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "checkJs": true,
        "forceConsistentCasingInFileNames": true,
        "module": "es2015",
        "target": "es2015",
        "jsx": "react"
    },
    "include": [
        "./src/**/*"
    ]
}